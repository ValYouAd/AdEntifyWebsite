{% extends '::base.admin.html.twig' %}

{% block body -%}
    <h1>{{ 'Category list'|trans }}</h1>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-success" href="{{ path('category_new') }}">
                <i class="icon icon-plus icon-white"></i> {{ 'Create a new entry'|trans }}
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'category.name'|trans }}</th>
                <th>{{ 'category.visible'|trans }}</th>
                <th>{{ 'category.displayOrder'|trans }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.visible %}<i class="glyphicon glyphicon-ok text-success"></i>{% else %}<i class="glyphicon glyphicon-ban-circle text-danger"></i>{% endif %}</td>
                <td>{{ entity.displayOrder }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default" href="{{ path('category_show', { 'id': entity.id }) }}">{{ 'show'|trans }}</a>
                        <a class="btn btn-primary" href="{{ path('category_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'AdEntifyBackofficeBundle:Common:pagination.html.twig' with {'count': count, 'pageLimit': pageLimit, route: 'categories'} %}
{% endblock %}
