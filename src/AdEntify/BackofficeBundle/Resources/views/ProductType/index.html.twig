{% extends '::base.admin.html.twig' %}

{% block body -%}
    <h1>{{ 'Product Type list'|trans }}</h1>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-success" href="{{ path('producttype_new') }}">
                <i class="icon icon-plus icon-white"></i> {{ 'Create a new entry'|trans }}
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Parent product type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('producttype_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.parent %}{{ entity.parent.name }}{% else %}<span class="text-warning">Pas de parent</span>{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('producttype_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('producttype_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
