{% extends '::base.admin.html.twig' %}

{% block body %}
    <div>
        <h1>
            <a>{{ 'End-user license agreement'|trans }} #{{ entity.id }}, {{ entity.language }}</a>
            <span class="pull-right">
                <a class="btn btn-default" href="{{ path('legals') }}">
                    {{ 'Back to the list'|trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('legals_edit', { 'id': entity.id }) }}">
                    {{ 'Edit'|trans }}
                </a>
                {{ form(delete_form, { 'attr': {'style': 'display:inline'} }) }}
            </span>
        </h1>
    </div>

    <div class="clearfix">&nbsp;</div>

    <div>
        <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a href="#terms_of_use" data-toggle="tab">{{ 'cgu.terms_of_use'|trans() }}</a></li>
            <li><a href="#privacy" data-toggle="tab">{{ 'cgu.privacy'|trans() }}</a></li>
            <li><a href="#legals_notice" data-toggle="tab">{{ 'cgu.legals_notice'|trans() }}</a></li>
        </ul>
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane active" id="terms_of_use">
                    <div class="clearfix">&nbsp;</div>
                    <p>{{ entity.termsOfUse|raw }}</p>
                </div>

                <div class="tab-pane" id="privacy">
                    <div class="clearfix">&nbsp;</div>
                    <p>{{ entity.privacy|raw }}</p>
                </div>

                <div class="tab-pane" id="legals_notice">
                    <div class="clearfix">&nbsp;</div>
                    <p>{{ entity.legalNotices|raw }}</p>
                </div>
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
    </div>
{% endblock %}