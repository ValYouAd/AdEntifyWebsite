{% extends '::base.admin.html.twig' %}

{% block body -%}
    {{ form_start(edit_form) }}
    {{ form_row(edit_form._token) }}
    <h1>
        {{ 'End-user license agreement edit'|trans }}
        <span class="pull-right">
            <a class="btn btn-default" href="{{ path ('legals') }}">{{ 'Back to the list'|trans }}</a>
            {{ form_widget(edit_form.submit) }}
            {{ form(delete_form, { 'attr': {'style': 'display:inline'} }) }}
        </span>
    </h1>

    <div>
        <h5>{{ 'cgu.language'|trans }}</h5>
        {{ form_widget(edit_form.language) }}
    </div>

    <div class="clearfix">&nbsp;</div>

    <div style="height: 100%">
        <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a href="#terms_of_use" data-toggle="tab">{{ 'cgu.termsOfUse'|trans() }}</a></li>
            <li><a href="#privacy" data-toggle="tab">{{ 'cgu.privacy2'|trans() }}</a></li>
            <li><a href="#legals_notice" data-toggle="tab">{{ 'cgu.legalsNotice'|trans() }}</a></li>
        </ul>
        <div class="panel-body" style="height: 100%; margin: 0; padding: 0">
            <div class="tab-content" style="height: 100%">
                <div class="tab-pane active" id="terms_of_use" style="height: 100%">
                    <div class="clearfix">&nbsp;</div>
                    {{ form_widget(edit_form.termsOfUse) }}
                </div>

                <div class="tab-pane" id="privacy" style="height: 100%">
                    <div class="clearfix">&nbsp;</div>
                    {{ form_widget(edit_form.privacy) }}
                </div>

                <div class="tab-pane" id="legals_notice" style="height: 100%">
                    <div class="clearfix">&nbsp;</div>
                    {{ form_widget(edit_form.legalNotices) }}
                </div>
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}