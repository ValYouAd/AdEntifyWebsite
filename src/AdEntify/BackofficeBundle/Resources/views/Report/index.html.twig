{% extends '::base.admin.html.twig' %}

{% block body -%}
    <h1>Report list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created At</th>
                <th>Reason</th>
                <th>Option</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('report_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.reason }}</td>
                <td>{{ entity.option }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="{{ path('report_show', { 'id': entity.id }) }}">show</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
